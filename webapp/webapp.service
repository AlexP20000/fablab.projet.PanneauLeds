[Unit]
Description=LED Matrix Display Web App
After=network.target

[Service]
User=root
Group=root
WorkingDirectory=/opt/webapp
ExecStart=/bin/sh -c 'gunicorn -b 0.0.0.0:80 webapp:app --pythonpath=/opt --log-file - --error-logfile - --preload'
Restart=always
TimeoutStartSec=10
RestartSec=10

[Install]
WantedBy=multi-user.target